<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!--导航样式-->
    <Style TargetType="Label" x:Key="NavigationStyle">
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Height" Value="30"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontFamily" Value="Microsoft YaHei UI"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Stretch"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="FontFamily" Value="Microsoft YaHei UI"/>
        <Setter Property="Foreground" Value="#000000"/>
        <Setter Property="Padding" Value="0,0,0,0"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="BlueViolet"/>
                <Setter Property="Foreground" Value="Beige"/>
            </Trigger>
        </Style.Triggers>
    </Style>


     

    <Style TargetType="Grid" x:Key="MainGridStyle">
        <Setter Property="Margin" Value="20,20,20,20"/>
        <Setter Property="Background" Value="Transparent"/>
    </Style>
    <Style TargetType="Image" x:Key="MainImgExpandStyle">
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter  Property="Source" Value="/Images/Main/side_button_minimize_normal.png" />
    </Style>


    <Style TargetType="Image" x:Key="MainImgCollapseStyle">
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter  Property="Source" Value="/Images/Main/side_button_maximize_normal.png" />
    </Style>

    
</ResourceDictionary>